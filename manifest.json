{
  "name": "RemoveTopBarYouTube",
  "manifest_version": 2,
  "version": "1.1",
  "description": "Removing the top bar when watching a YouTube video",
  "permissions": [
    "activeTab"
  ],
  "content_scripts": [{
    "matches": ["*://www.youtube.com/*"],
    "js": ["content.js"]
  }],
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_icon": "images/listremoveall_104198.png"
  },
  "icons": {
    "128": "images/listremoveall_104198.png"
  }
}
